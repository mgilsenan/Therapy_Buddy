<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoodLogActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="How are you today?"
            android:textColor="#443e38"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="150dp"
            android:text="Tell us how you are today by selecting either of the emojis and writing a little bit about how you feel."
            android:textColor="#443e38"
            android:textSize="18dp"
            android:transitionName="message_trans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center|fill_horizontal"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.01"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relativeLayout_rad"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="radSelected">

                <ImageView
                    android:id="@+id/rad"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icons_veryhappy" />

                <TextView
                    android:id="@+id/radtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="false"
                    android:layout_marginTop="80dp"
                    android:gravity="center_horizontal"
                    android:text="Excited"
                    android:textAlignment="center"
                    android:textColor="#443e38"
                    android:textSize="18dp"
                    android:transitionName="message_trans" />

                <ImageView
                    android:id="@+id/Selected0"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/icons_selected" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_good"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="goodSelected">

                <ImageView
                    android:id="@+id/good"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icons_good" />

                <TextView
                    android:id="@+id/goodtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:gravity="center_horizontal"
                    android:text="Happy"
                    android:textAlignment="center"
                    android:textColor="#443e38"
                    android:textSize="18dp"
                    android:transitionName="message_trans" />

                <ImageView
                    android:id="@+id/Selected1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/icons_selected" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_neutral"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="neutralSelected">

                <ImageView
                    android:id="@+id/neutral"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icons_neutral" />

                <TextView
                    android:id="@+id/neutraltext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:text="Neutral"
                    android:textAlignment="center"
                    android:textColor="#443e38"
                    android:textSize="18dp"
                    android:transitionName="message_trans"
                    android:gravity="center_horizontal" />

                <ImageView
                    android:id="@+id/Selected2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/icons_selected" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_bad"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="badSelected">

                <ImageView
                    android:id="@+id/bad"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icons_sad" />

                <TextView
                    android:id="@+id/badtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:gravity="center_horizontal"
                    android:text="Sad"
                    android:textAlignment="center"
                    android:textColor="#443e38"
                    android:textSize="18dp"
                    android:transitionName="message_trans" />

                <ImageView
                    android:id="@+id/Selected3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/icons_selected" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_awful"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="awfulSelected">

                <ImageView
                    android:id="@+id/awful"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icons_awful" />

                <TextView
                    android:id="@+id/awfultext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:text="Awful"
                    android:textAlignment="center"
                    android:textColor="#443e38"
                    android:textSize="18dp"
                    android:transitionName="message_trans"
                    android:gravity="center_horizontal" />

                <ImageView
                    android:id="@+id/Selected4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/icons_selected" />
            </RelativeLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/moodLogFeelings"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Write down your feelings today...">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/modlogfeelings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:transitionName="phone_number_trans" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/moodLogSubmitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:backgroundTint="#7ca493"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:transitionName="continue_trans" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:animationCache="true">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="moodLogDisplay"
                android:text="See Previous Logs" />
        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
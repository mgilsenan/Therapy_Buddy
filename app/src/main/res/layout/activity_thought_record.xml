<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThoughtRecordActivity"
    android:background="@drawable/background_login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Thought Record"
                android:textAlignment="center"
                android:textColor="#5D7047"
                android:textSize="36dp" />
            <TextView
                android:id="@+id/upsetting_event_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="12dp"
                android:layout_below="@+id/title"
                android:text="Step One: Describe the Upsetting Event"
                android:textColor="#5D7047"
                android:textSize="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/upsetting_event_description"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your description"
                android:layout_marginTop="12dp"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:transitionName="phone_number_trans" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/negative_feelings_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="30dp"
                android:text="Step Two: Record Your Negative Feelings"
                android:textColor="#5D7047"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/negative_feelings_label_helper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:text="Rate each one from 0 (the least) to 100 (the most). Fill in at least one row, and at most six rows."
                android:textColor="#5D7047"
                android:textSize="12dp" />

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <Spinner
                    android:id="@+id/negative_feelings_word_1"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:layout_column="0"
                    app:layout_columnWeight="8"
                    app:layout_row="0"
                    app:layout_rowWeight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/negative_feelings_rating_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="#"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:layout_rowWeight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="25dp"
                        android:inputType="number"
                        android:transitionName="phone_number_trans" />

                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/negative_feelings_word_2"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:layout_column="0"
                    app:layout_columnWeight="8"
                    app:layout_row="1"
                    app:layout_rowWeight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/negative_feelings_rating_2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="#"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    app:layout_rowWeight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="25dp"
                        android:inputType="number"
                        android:transitionName="phone_number_trans" />

                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/negative_feelings_word_3"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:layout_column="0"
                    app:layout_columnWeight="8"
                    app:layout_row="2"
                    app:layout_rowWeight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/negative_feelings_rating_3"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="#"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="2"
                    app:layout_rowWeight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="25dp"
                        android:inputType="number"
                        android:transitionName="phone_number_trans" />

                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/negative_feelings_word_4"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:layout_column="0"
                    app:layout_columnWeight="8"
                    app:layout_row="3"
                    app:layout_rowWeight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/negative_feelings_rating_4"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="#"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="3"
                    app:layout_rowWeight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="25dp"
                        android:inputType="number"
                        android:transitionName="phone_number_trans" />

                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/negative_feelings_word_5"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:layout_column="0"
                    app:layout_columnWeight="8"
                    app:layout_row="4"
                    app:layout_rowWeight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/negative_feelings_rating_5"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="#"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="4"
                    app:layout_rowWeight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="25dp"
                        android:inputType="number"
                        android:transitionName="phone_number_trans" />

                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/negative_feelings_word_6"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:layout_column="0"
                    app:layout_columnWeight="8"
                    app:layout_row="5"
                    app:layout_rowWeight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/negative_feelings_rating_6"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="#"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="5"
                    app:layout_rowWeight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="25dp"
                        android:inputType="number"
                        android:transitionName="phone_number_trans" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
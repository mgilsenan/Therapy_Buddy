<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThoughtRecordActivity"
    android:background="@drawable/background_login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Thought Record Analytics"
                android:textAlignment="center"
                android:textColor="#5D7047"
                android:textSize="36dp" />
            <TextView
                android:id="@+id/upsetting_event_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="12dp"
                android:layout_below="@+id/title"
                android:text="Aggregate Analytics"
                android:textAlignment="center"
                android:textColor="#5D7047"
                android:textSize="20dp"
                android:gravity="center_horizontal" />


            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <Spinner
                    android:id="@+id/negative_feelings_word_1"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:layout_column="0"
                    app:layout_columnWeight="8"
                    app:layout_row="0"
                    app:layout_rowWeight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/negative_feelings_rating_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="#"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:layout_rowWeight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/negative_feelings_rating_1_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="25dp"
                        android:inputType="number"
                        android:transitionName="phone_number_trans" />

                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/negative_feelings_word_2"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:layout_column="0"
                    app:layout_columnWeight="8"
                    app:layout_row="1"
                    app:layout_rowWeight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/negative_feelings_rating_2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="#"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    app:layout_rowWeight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/negative_feelings_rating_2_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="25dp"
                        android:inputType="number"
                        android:transitionName="phone_number_trans" />

                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/negative_feelings_word_3"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:layout_column="0"
                    app:layout_columnWeight="8"
                    app:layout_row="2"
                    app:layout_rowWeight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/negative_feelings_rating_3"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="#"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="2"
                    app:layout_rowWeight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/negative_feelings_rating_3_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="25dp"
                        android:inputType="number"
                        android:transitionName="phone_number_trans" />

                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/negative_feelings_word_4"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:layout_column="0"
                    app:layout_columnWeight="8"
                    app:layout_row="3"
                    app:layout_rowWeight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/negative_feelings_rating_4"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="#"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="3"
                    app:layout_rowWeight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/negative_feelings_rating_4_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="25dp"
                        android:inputType="number"
                        android:transitionName="phone_number_trans" />

                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/negative_feelings_word_5"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:layout_column="0"
                    app:layout_columnWeight="8"
                    app:layout_row="4"
                    app:layout_rowWeight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/negative_feelings_rating_5"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="#"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="4"
                    app:layout_rowWeight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/negative_feelings_rating_5_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="25dp"
                        android:inputType="number"
                        android:transitionName="phone_number_trans" />

                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/negative_feelings_word_6"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:layout_column="0"
                    app:layout_columnWeight="8"
                    app:layout_row="5"
                    app:layout_rowWeight="1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/negative_feelings_rating_6"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="#"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="5"
                    app:layout_rowWeight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/negative_feelings_rating_6_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="25dp"
                        android:inputType="number"
                        android:transitionName="phone_number_trans" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/auatomatic_thoughts_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="12dp"
                android:text="Step Three: Automatic Thoughts"
                android:textColor="#5D7047"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/automatic_thoughts_label_helper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="12dp"
                android:text="Write the negative thoughts that come to mind automatically. How much do you believe in them?"
                android:textColor="#5D7047"
                android:textSize="12dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/automatic_thoughts_description"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:hint="Your automatic thoughts"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/automatic_thoughts_description_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:inputType="textMultiLine"
                    android:transitionName="phone_number_trans" />

            </com.google.android.material.textfield.TextInputLayout>





            <TextView
                android:id="@+id/outcome_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="30dp"
                android:text="Last Step: Outcome"
                android:textColor="#5D7047"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/outcome_label_helper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:text="Having completed the worksheet exercise, fill the circle which best describes how you feel now."
                android:textColor="#5D7047"
                android:textSize="12dp"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:visibility="visible"></com.github.mikephil.charting.charts.LineChart>

            <Button
                android:id="@+id/complete_worksheet_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Complete Worksheet"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#5D7047"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:transitionName="continue_trans" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



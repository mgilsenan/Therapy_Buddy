<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThoughtRecordActivity"
    android:background="@drawable/background_login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Thought Record Analytics"
                android:textAlignment="center"
                android:textColor="#5D7047"
                android:textSize="36dp" />
            <TextView
                android:id="@+id/aggregate_analytics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="12dp"
                android:layout_below="@+id/title"
                android:text="Aggregate Analytics"
                android:textAlignment="center"
                android:textColor="#5D7047"
                android:textSize="26dp"
                android:gravity="center_horizontal" />


            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/total_entries"
                    android:text="Total Entries"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    android:layout_marginRight="10dp"
                    app:layout_column="0"
                    app:layout_columnWeight="10"
                    app:layout_row="0"
                    app:layout_rowWeight="1"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/total_entries_value"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="100"
                    app:layout_row="0"
                    android:layout_marginLeft="10dp"
                    app:layout_rowWeight="1"
                    android:layout_marginStart="10dp" />


                <TextView
                    android:id="@+id/biggest_streak"
                    android:text="Longest Streak"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    android:layout_marginRight="10dp"
                    app:layout_column="0"
                    app:layout_columnWeight="16"
                    app:layout_row="1"
                    app:layout_rowWeight="1"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/biggest_streak_value"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="8"
                    app:layout_row="1"
                    android:layout_marginLeft="10dp"
                    app:layout_rowWeight="1"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/most_often_emotion"
                    android:text="Emotion Most \n Often Selected"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    android:layout_marginRight="10dp"
                    app:layout_column="0"
                    app:layout_columnWeight="16"
                    app:layout_row="2"
                    app:layout_rowWeight="1"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/most_often_emotion_value"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="8"
                    app:layout_row="2"
                    android:layout_marginLeft="10dp"
                    app:layout_rowWeight="1"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/most_often_distortion"
                    android:text="Distortion Most \n Often Selected"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    android:layout_marginRight="10dp"
                    app:layout_column="0"
                    app:layout_columnWeight="16"
                    app:layout_row="3"
                    app:layout_rowWeight="1"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/most_often_distortion_value"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#E0E0E0"
                    app:endIconMode="clear_text"
                    app:layout_column="1"
                    app:layout_columnWeight="8"
                    app:layout_row="3"
                    android:layout_marginLeft="10dp"
                    app:layout_rowWeight="1"
                    android:layout_marginStart="10dp" />

            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/outcome_graph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="12dp"
                android:layout_below="@+id/title"
                android:text="Outcomes Over Time"
                android:textAlignment="center"
                android:textColor="#5D7047"
                android:textSize="26dp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/outcome_label_helper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:text="Here's how you felt after completing your worksheets. 0 stands for SAME, 1 for GOOD, 2 for BETTER, and 3 for BEST."
                android:textColor="#5D7047"
                android:textSize="16dp"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_marginTop="23dp"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:visibility="visible"></com.github.mikephil.charting.charts.LineChart>

            <Button
                android:id="@+id/generate_records_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Generate Records For This User"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#5D7047"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:transitionName="continue_trans" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


